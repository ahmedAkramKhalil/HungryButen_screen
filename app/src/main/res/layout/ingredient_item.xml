<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:bind="http://schemas.android.com/apk/res-auto">
    <data>
        <import type="android.view.View"/>

        <variable
            name="ingredient"
            type="com.wiz.myapplication.model.Ingredient" />

        <variable
            name="vm"
            type="com.wiz.myapplication.viewmodel.ChefViewModel" />
    </data>
<FrameLayout
    android:id="@+id/item"
    android:layout_width="145dp"
    android:layout_height="150dp"
    android:layout_margin="15dp"
    android:orientation="vertical"
    android:onClick="@{ () -> ingredient.incrementAmount()}"

    >

    <FrameLayout
        android:layout_width="125dp"
        android:layout_height="125dp"
        android:layout_gravity="center"
        android:layout_marginLeft="5dp"
        android:layout_marginTop="10dp"
        android:layout_marginRight="5dp"
        android:layout_marginBottom="5dp"
        android:background="@drawable/custom_rounded_item_back"
        android:backgroundTint="@color/item_recycler_color"
        android:clipToPadding="false"
        android:elevation="-2dp"
        android:gravity="center"
        android:orientation="vertical"

        >

        <ImageView
            android:id="@+id/component_img"
            android:layout_width="wrap_content"
            android:layout_height="85dp"
            android:layout_gravity="center|center_horizontal"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            android:paddingBottom="20dp"
            bind:posterPath="@{ingredient.photo}"
            />

        <TextView
            android:id="@+id/component_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom|center"
            android:gravity="bottom|center_horizontal"
            android:paddingLeft="15dp"
            android:paddingRight="15dp"
            android:paddingBottom="6dp"
            android:text="@{ingredient.name}"
            android:lineSpacingExtra="-8dp"

            android:textColor="#ffffff"

            android:textSize="13sp"
            android:textStyle="bold" />

    </FrameLayout>

    <LinearLayout
        android:id="@+id/buttons_layout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal|top"
        android:elevation="35dp"
        android:gravity="center_horizontal|top"
        android:orientation="horizontal"
        android:visibility="@{ingredient.amount > 0 ? View.VISIBLE : View.GONE}"
        >

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="center_horizontal|top">

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/add_button"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_gravity="bottom|right"
                android:background="@drawable/add_min_button_back"
                android:backgroundTint="@color/gray"
                android:elevation="2dp"
                android:onClick="@{() -> ingredient.incrementAmount()}"
                android:text="+"
                android:textColor="#000000"
                android:textSize="22sp" />

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/mine_button"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_gravity="bottom|left"
                android:layout_marginRight="60dp"
                android:background="@drawable/add_min_button_back"
                android:backgroundTint="@color/gray"
                android:elevation="2dp"
                android:text="-"
                android:onClick="@{() -> ingredient.decrementAmount()}"

                android:textColor="#000000"
                android:textSize="22sp" />

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/name_button"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_gravity="center_horizontal"
                android:layout_marginBottom="8dp"
                android:background="@drawable/add_min_button_back"
                android:backgroundTint="@color/button_min_rounded_color"
                android:elevation="4dp"
                android:gravity="center"
                android:text="@{String.valueOf(ingredient.amount)}"
                android:textAlignment="center"
                android:textColor="#000000"
                android:textSize="18sp"
                android:textStyle="bold"
                tools:text="10" />

        </FrameLayout>

    </LinearLayout>


</FrameLayout>
</layout>